@model List<CartItemViewModel>
@{
	ViewData["Title"] = "Shopping Cart";
	decimal cartTotal = Model.Sum(item => item.Total);
}

<h2><i class="fa fa-shopping-cart"></i> Your Shopping Cart</h2>
<hr />
@if (TempData["Error"] != null)
{
	<div class="alert alert-danger alert-dismissible fade show rounded-4 shadow-sm mb-4 border-0" role="alert">
		<div class="d-flex align-items-center">
			<i class="bi bi-exclamation-octagon-fill fs-4 me-3"></i>
			<div>
				<strong>Stock Issue!</strong> @TempData["Error"]
			</div>
		</div>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

@if (Model != null && Model.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Product</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Total</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.ProductName</td>
					<td>@item.Price.ToString("C")</td>
					<td>@item.Quantity</td>
					<td>@item.Total.ToString("C")</td>
					<td>
						<a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">Remove</a>
					</td>
				</tr>
			}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3" class="text-end fw-bold">Grand Total:</td>
				<td class="fw-bold">@cartTotal.ToString("C")</td>
				<td></td>
			</tr>
		</tfoot>
	</table>

	<div class="d-flex justify-content-between mt-4">
		<a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Continue Shopping</a>
		<a asp-action="Checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
	</div>
}
else
{
	<div class="alert alert-info">Your cart is empty.</div>
	<a asp-action="Index" asp-controller="Product" class="btn btn-primary">Start Shopping</a>
}