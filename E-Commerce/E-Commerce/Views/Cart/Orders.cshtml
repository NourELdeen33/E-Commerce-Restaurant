@model List<Order>

@{

	ViewData["Title"] = "My Orders";

}



<div class="container my-5">

	<div class="d-flex justify-content-between align-items-center mb-4">

		<h2 class="fw-bold text-dark"><i class="bi bi-bag-check me-2 text-primary"></i>My Orders</h2>

		<span class="badge bg-primary rounded-pill">Total: @(Model?.Count ?? 0) Orders</span>

	</div>



	@if (Model == null || !Model.Any())

	{

		<div class="text-center py-5 bg-white shadow-sm rounded-4">

			<i class="bi bi-cart-x display-1 text-muted"></i>

			<h4 class="mt-3 text-secondary">No orders to show yet</h4>

			<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary mt-3">Start Shopping</a>

		</div>

	}

	else

	{

		<div class="table-responsive shadow-sm rounded-4 bg-white">

			<table class="table table-hover align-middle mb-0">

				<thead class="bg-light">

					<tr>

						<th class="ps-4 py-3 text-uppercase small fw-bold">Order ID</th>

						<th class="py-3 text-uppercase small fw-bold">Date</th>

						<th class="py-3 text-uppercase small fw-bold">Items Details</th>

						<th class="py-3 text-uppercase small fw-bold text-end pe-4">Total Amount</th>

					</tr>

				</thead>

				<tbody>

					@foreach (var item in Model)

					{

						<tr>

							<td class="ps-4">

								<span class="fw-bold text-primary">#@item.Id</span>

							</td>

							<td>

								<div class="small text-muted">@item.OrderDate.ToString("MMM dd, yyyy")</div>

								<div class="extra-small text-secondary" style="font-size: 0.75rem;">@item.OrderDate.ToString("hh:mm tt")</div>

							</td>

							<td>

								<ul class="list-unstyled mb-0">

									@foreach (var orderitem in item.OrderItems)

									{

										<li class="mb-1">

											<span class="small">@orderitem.Product.Name : </span>

											<span class="badge bg-light text-dark border mr-1"> @orderitem.Quantity  x  @orderitem.Price.ToString("C")</span>

										</li>

									}

								</ul>

							</td>

							<td class="text-end pe-4">

								<span class="fw-bold text-dark fs-5">$@item.TotalAmount.ToString("N2")</span>

							</td>

						</tr>

					}

				</tbody>

			</table>

		</div>

	}

</div>



<style>

	.table thead th {
		border-top: none;
		color: #6c757d;
		letter-spacing: 0.5px;
	}



	.table-hover tbody tr:hover {
		background-color: #f8f9ff;
		transition: background-color 0.2s ease;
	}



	.rounded-4 {
		border-radius: 1rem !important;
	}



	.extra-small {
		color: #adb5bd;
	}

</style>