@model E_Commerce.ViewModels.VerifyEmailViewModel

@{
	ViewData["Title"] = "Verify Email";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-5">
			<div class="card shadow-sm border-0">
				<div class="card-header bg-primary text-white text-center py-3">
					<h4 class="mb-0"><i class="fas fa-envelope-open-text me-2"></i>Verify Your Email</h4>
				</div>
				<div class="card-body p-4">
					<p class="text-muted text-center mb-4">Please enter your email address to reset your password.</p>

					<form asp-action="VerfiyEmail">
						<div asp-validation-summary="ModelOnly" class="text-danger small"></div>

						<div class="form-floating mb-3">
							<input asp-for="EmailAddress" class="form-control" placeholder="name@example.com" />
							<label asp-for="EmailAddress">Email Address</label>
							<span asp-validation-for="EmailAddress" class="text-danger small"></span>
						</div>

						<div class="d-grid gap-2">
							<button type="submit" class="btn btn-primary btn-lg shadow-sm">
								Verify Email
							</button>
						</div>
					</form>
				</div>
				<div class="card-footer bg-light text-center py-3">
					<a asp-action="Login" class="text-decoration-none text-secondary small">
						<i class="fas fa-arrow-left me-1"></i> Back to Login
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}