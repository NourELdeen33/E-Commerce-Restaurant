@model E_Commerce.ViewModels.ChangePasswrodViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Set New Password</h2>
                        <p class="text-muted small">Enter your new secure password below</p>
                    </div>

                    <form asp-action="ChangePassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="EmailAddress" class="form-label small fw-bold text-secondary"></label>
                            <input asp-for="EmailAddress" class="form-control bg-light border-0 py-2 text-muted shadow-none" readonly />
                            <span asp-validation-for="EmailAddress" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label small fw-bold text-secondary">New Password</label>
                            <input asp-for="NewPassword" type="password" class="form-control bg-light border-0 py-2 shadow-none" placeholder="••••••••" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label small fw-bold text-secondary">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-light border-0 py-2 shadow-none" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid shadow-sm">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold py-2" style="font-size: 0.9rem;">
                                Update Password
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="VerfiyEmail" class="text-decoration-none small text-secondary fw-medium">
                            <i class="fas fa-arrow-left me-1"></i> Back to Verify Email
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}