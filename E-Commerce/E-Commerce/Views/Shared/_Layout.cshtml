<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - E-Commerce Restaurant</title>

	<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	<style>
		:root {
			--primary-color: #e67e22;
			--dark-color: #2c3e50;
			--bg-light: #fdfaf7;
		}

		body {
			font-family: 'Inter', sans-serif;
			background-color: var(--bg-light);
			color: var(--dark-color);
			display: flex;
			flex-direction: column;
			min-height: 100vh;
		}

		h1, h2, h3, .navbar-brand, .footer-brand {
			font-family: 'Playfair Display', serif;
		}

		.navbar {
			background-color: #fff !important;
			border-bottom: 1px solid rgba(0,0,0,0.05);
			padding: 0.8rem 0;
		}

		.navbar-brand {
			font-size: 1.6rem;
			color: var(--primary-color) !important;
			font-weight: 800;
		}

		.nav-link {
			color: var(--dark-color) !important;
			font-weight: 500;
			transition: all 0.3s;
		}

			.nav-link:hover {
				color: var(--primary-color) !important;
			}

		main {
			flex: 1;
		}

		/* Footer Styling */
		.footer-pro {
			background-color: #fff;
			padding: 50px 0 20px;
			border-top: 1px solid #eee;
			margin-top: auto;
		}

		.footer-title {
			font-weight: 700;
			margin-bottom: 1.2rem;
			color: var(--dark-color);
			font-size: 1.1rem;
		}

		.footer-list a {
			color: #666;
			text-decoration: none;
			transition: 0.3s;
			display: block;
			margin-bottom: 8px;
			font-size: 0.95rem;
		}

			.footer-list a:hover {
				color: var(--primary-color);
				transform: translateX(5px);
			}

		.footer-social a {
			font-size: 1.3rem;
			color: #444;
			margin-right: 15px;
			transition: 0.3s;
		}

			.footer-social a:hover {
				color: var(--primary-color);
				transform: translateY(-3px);
				display: inline-block;
			}
	</style>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg sticky-top shadow-sm">
			<div class="container">
				<a class="navbar-brand d-flex align-items-center text-decoration-none" asp-controller="Product" asp-action="Index">
					<i class="fa-solid fa-utensils me-2"></i> <span>E-Restaurant</span>
				</a>

				<button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto align-items-center">
						<li class="nav-item">
							<a class="nav-link" asp-controller="Product" asp-action="Index">Menu</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Ingredient" asp-action="Index">Ingredients</a>
						</li>

						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="Cart" asp-action="Orders">My Orders</a>
							</li>
							<li class="nav-item position-relative me-lg-3">
								<a class="nav-link" asp-controller="Cart" asp-action="Index">
									<i class="fa-solid fa-cart-shopping fs-5"></i>
									@if (Context.Session.GetCartCount() > 0)
									{
										<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.7rem;">
											@Context.Session.GetCartCount()
										</span>
									}
								</a>
							</li>
							<li class="nav-item ms-lg-2">
								<span class="badge rounded-pill bg-light text-dark border px-3 py-2 fw-normal">
									<i class="fa-regular fa-user me-1"></i> Hi, @User.Identity.Name
								</span>
							</li>
							<li class="nav-item">
								<a class="nav-link text-danger fw-bold small ms-lg-2" asp-controller="Account" asp-action="LogOut">
									<i class="fa-solid fa-arrow-right-from-bracket"></i>
								</a>
							</li>
						}
						else
						{
							<li class="nav-item ms-lg-3">
								<a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
							</li>
							<li class="nav-item ms-lg-2">
								<a class="btn btn-primary rounded-pill px-4 shadow-sm" asp-controller="Account" asp-action="Register">Join Now</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="container mt-4 mb-5">
		@RenderBody()
	</main>

	<footer class="footer-pro">
		<div class="container">
			<div class="row gy-4 pb-4">
				<div class="col-md-4 text-md-start text-center">
					<a class="footer-brand d-inline-flex align-items-center mb-3 text-decoration-none" asp-controller="Product" asp-action="Index">
						<i class="fa-solid fa-utensils me-2"></i> E-Restaurant
					</a>
					<p class="text-muted small pr-lg-5">
						Fresh meals crafted with passion. Order your favorite dishes anytime, anywhere and experience the true taste of quality ingredients.
					</p>
				</div>

				<div class="col-md-4 text-center">
					<h6 class="footer-title">Quick Links</h6>
					<ul class="footer-list list-unstyled">
						<li><a asp-controller="Product" asp-action="Index">Explore Menu</a></li>
						<li><a asp-controller="Cart" asp-action="Orders">Track Orders</a></li>
						<li><a href="#">Help & Support</a></li>
					</ul>
				</div>

				<div class="col-md-4 text-md-end text-center">
					<h6 class="footer-title">Connect With Us</h6>
					<div class="footer-social">
						<a href="#"><i class="fa-brands fa-facebook"></i></a>
						<a href="#"><i class="fa-brands fa-instagram"></i></a>
						<a href="#"><i class="fa-brands fa-x-twitter"></i></a>
						<a href="#"><i class="fa-brands fa-whatsapp"></i></a>
					</div>
					<p class="small text-muted mt-3">
						<i class="fa-solid fa-location-dot me-1"></i> Cairo, Egypt
					</p>
				</div>
			</div>
			<div class="border-top pt-4 text-center">
				<p class="small text-muted mb-0">
					&copy; @DateTime.Now.Year E-Restaurant — Made with <i class="fa-solid fa-heart text-danger"></i> for you.
				</p>
			</div>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>